<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%= @song.name %></h1>

<h3>Genres:</h3>
  <% @genres.each do |genre| %>
    <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></li>
  <% end %>

<h3>Artist:</h3>
  <li><a href="/artists/<%= @artist.slug %>"> <%= @artist.name %></a></li>
